{
  "name": "backend",
  "private": true,
  "version": "2.5.2",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "imports": {
    "#utils/mqAPI": "./src/utils/mqAPI.js"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "test": "pnpm test:unit && pnpm test:integration",
    "test:unit": "vitest run tests --exclude='tests/integration/**' --exclude='tests/routes/**'",
    "test:integration": "vitest run tests/integration tests/routes",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage"
  },
  "dependencies": {
    "@better-auth/cli": "^1.3.27",
    "@tago-io/sdk": "^12.2.1",
    "better-auth": "^1.3.27",
    "better-sqlite3": "^12.4.1",
    "better-sse": "^0.15.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-fileupload": "^1.5.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "http": "^0.0.1-security",
    "ms": "^2.1.3",
    "path": "^0.12.7",
    "pidusage": "^4.0.1",
    "pino": "^10.0.0",
    "pino-http": "^11.0.0",
    "pino-loki": "^2.6.0",
    "pino-pretty": "^13.1.2",
    "prom-client": "^15.1.3",
    "sanitize-filename": "^1.6.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.2",
    "@vitest/ui": "^4.0.2",
    "supertest": "^7.1.4",
    "vitest": "^4.0.2"
  }
}
